                    <!--android:id="@+id/extention"-->
                    <!--android:layout_weight="20"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content" />-->
                <!-- Spiner-->
                <!--<TextView-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="wrap_content"-->
                <!--android:text="ext"-->
                <!--android:textStyle="bold" />-->
